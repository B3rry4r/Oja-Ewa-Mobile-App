# Fastfile
opt_out_usage

platform :ios do
  desc "Build and upload to TestFlight (Fastlane-managed signing)"
  lane :beta do
    setup_ci

    # -----------------------------
    # Keychain for CI
    # -----------------------------
    create_keychain(
      name: "signing_keychain",
      password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )

    # -----------------------------
    # App Store Connect API Key
    # -----------------------------
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "./AuthKey.p8"
    )

    # -----------------------------
    # MATCH â€” THIS HANDLES ALL SIGNING
    # -----------------------------
    match(
      type: "appstore",
      readonly: true,
      app_identifier: "com.wawuafrica.ojaewa",
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: Base64.strict_encode64(
        "#{ENV['MATCH_GIT_TOKEN']}:x-oauth-basic"
      ),
      keychain_name: "signing_keychain",
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      api_key: api_key,
      clone_branch_directly: true
    )

    # -----------------------------
    # Get the provisioning profile UUID from match
    # -----------------------------
    profile_env_name = "sigh_com.wawuafrica.ojaewa_appstore_profile-path"
    profile_path = ENV[profile_env_name]
    
    if profile_path.nil? || profile_path.empty?
      UI.user_error!("Could not find provisioning profile path in environment")
    end
    
    UI.message("Provisioning profile path: #{profile_path}")

    # -----------------------------
    # SET TEAM ID AND PROFILE IN PROJECT
    # -----------------------------
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Runner.xcodeproj",
      team_id: ENV["APPLE_TEAM_ID"],
      bundle_identifier: "com.wawuafrica.ojaewa",
      profile_uuid: lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING]["com.wawuafrica.ojaewa"],
      code_sign_identity: "iPhone Distribution",
      build_configurations: ["Release"]
    )

    # -----------------------------
    # Build number bump
    # -----------------------------
    increment_build_number(
      build_number: latest_testflight_build_number(
        api_key: api_key,
        app_identifier: "com.wawuafrica.ojaewa"
      ) + 1,
      xcodeproj: "Runner.xcodeproj"
    )

    # -----------------------------
    # Flutter build (no codesign)
    # -----------------------------
    Dir.chdir("..") do
      sh("flutter", "build", "ios", "--release", "--no-codesign")
    end    

    # -----------------------------
    # Xcode archive + export
    # -----------------------------
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.wawuafrica.ojaewa" => "match AppStore com.wawuafrica.ojaewa"
        }
      },
      clean: true
    )

    # -----------------------------
    # Upload to TestFlight
    # -----------------------------
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: false
    )

  ensure
    delete_keychain(
      name: "signing_keychain"
    ) if File.exist?(File.expand_path("~/Library/Keychains/signing_keychain-db"))
  end
end