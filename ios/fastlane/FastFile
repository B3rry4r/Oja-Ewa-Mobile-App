# Fastfile
opt_out_usage

platform :ios do
  desc "Build and upload to TestFlight (Fastlane-managed signing)"
  lane :beta do
    setup_ci

    # -----------------------------
    # Keychain for CI
    # -----------------------------
    create_keychain(
      name: "signing_keychain",
      password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )

    # -----------------------------
    # App Store Connect API Key
    # -----------------------------
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "./AuthKey.p8"
    )

    # -----------------------------
    # MATCH â€” THIS HANDLES ALL SIGNING
    # -----------------------------
    match(
      type: "appstore",
      readonly: true,
      app_identifier: "com.wawuafrica.ojaewa",
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: Base64.strict_encode64(
        "#{ENV['MATCH_GIT_TOKEN']}:x-oauth-basic"
      ),
      keychain_name: "signing_keychain",
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      api_key: api_key,
      clone_branch_directly: true
    )

    # -----------------------------
    # Get profile and team info from the installed profile
    # -----------------------------
    profile_path = ENV["sigh_com.wawuafrica.ojaewa_appstore_profile-path"]
    UI.message("Profile path: #{profile_path}")
    
    # Extract team ID and UUID from the profile
    require 'plist'
    profile_plist = Plist.parse_xml(`security cms -D -i "#{profile_path}"`)
    profile_uuid = profile_plist["UUID"]
    team_id = profile_plist["TeamIdentifier"].first
    team_name = profile_plist["TeamName"]
    
    UI.message("=" * 50)
    UI.message("Profile UUID: #{profile_uuid}")
    UI.message("Profile Name: #{profile_plist['Name']}")
    UI.message("Team ID from profile: #{team_id}")
    UI.message("Team Name from profile: #{team_name}")
    UI.message("Team ID from ENV: #{ENV['APPLE_TEAM_ID']}")
    UI.message("=" * 50)
    
    # Use the team ID from the profile instead of ENV
    actual_team_id = team_id

    # -----------------------------
    # SET TEAM ID AND PROFILE IN PROJECT
    # -----------------------------
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Runner.xcodeproj",
      team_id: actual_team_id,
      bundle_identifier: "com.wawuafrica.ojaewa",
      profile_uuid: profile_uuid,
      code_sign_identity: "iPhone Distribution",
      build_configurations: ["Release"]
    )

    # -----------------------------
    # Build number bump
    # -----------------------------
    UI.message("=== BUILD NUMBER INFO ===")
    
    begin
      # Get the latest build number from TestFlight for the current version
      latest_build = latest_testflight_build_number(
        api_key: api_key,
        app_identifier: "com.wawuafrica.ojaewa"
      )
      
      UI.message("Latest TestFlight build number: #{latest_build}")
      new_build_number = latest_build + 1
      
    rescue => ex
      UI.error("Error fetching latest build number: #{ex.message}")
      UI.important("Falling back to timestamp-based build number")
      
      # Fallback: Use a timestamp-based build number (ensures uniqueness)
      new_build_number = Time.now.to_i.to_s[-8..-1].to_i
    end
    
    UI.message("New build number will be: #{new_build_number}")
    UI.message("=" * 50)
    
    # Update the build number in Xcode project
    increment_build_number(
      build_number: new_build_number,
      xcodeproj: "Runner.xcodeproj"
    )
    
    # Store for reference
    ENV["BUILD_NUMBER"] = new_build_number.to_s

    # -----------------------------
    # Flutter build (no codesign)
    # -----------------------------
    Dir.chdir("..") do
      sh("flutter", "build", "ios", "--release", "--no-codesign")
    end    

    # -----------------------------
    # Xcode archive + export
    # -----------------------------
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        teamID: actual_team_id,
        provisioningProfiles: {
          "com.wawuafrica.ojaewa" => profile_uuid
        }
      },
      clean: true
    )

    # -----------------------------
    # Upload to TestFlight
    # -----------------------------
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: false
    )

  ensure
    delete_keychain(
      name: "signing_keychain"
    ) if File.exist?(File.expand_path("~/Library/Keychains/signing_keychain-db"))
  end
end
